<div class="d-grid justify-content-center">
  <h3>New Group</h3>
  <%= link_to 'Create', new_group_url, class: 'btn btn-primary btn-sm' %>
  <br>
  <h4>Total Amount:
     
  </h4>

</div>
<% @groups.each do |g| %>
  <div class="container d-flex justify-content-center">
    <div class="container card d-flex justify-content-between">
    <div class='row'>
      <div class='col-md-4'>
        <img src="<%= g.icon %>" alt="Group Icon" width="50" height="50">
      </div>
    
      <div class='col-md-4 card-title'>
        <h3><%= g.name %></h3>
        <span class="badge bg-primary"> <%= g.created_at.strftime("%B, %e at %H:%M") %> </span>
        
        </div>
    </div>
    <div class='col-md-4'>
    <%= link_to 'View Transaction', group_path(g), class: 'btn btn-sm btn-primary btn-sm' %>
    </div>

      </div>
  </div>
<% end %>
