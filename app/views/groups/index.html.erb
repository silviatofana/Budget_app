<h1>Groups</h1>


<div id="groups">
  <% @groups.each do |group| %>
    <%= render group %>
    <%= image_tag(group.icon, size: '96x96') %>
    <p>
    <%= group.name %>  
 
    <%= link_to "Show this group", group %>
      
    </p>
  <% end %>
</div>

